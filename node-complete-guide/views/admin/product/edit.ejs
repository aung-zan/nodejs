<%- include("../../include/head.ejs") %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include("../../include/navigation.ejs") %>

    <main>
        <form class="product-form" action="/admin/product/<%= product._id %>" enctype="multipart/form-data" method="POST">
            <input type="hidden" name="imageName" value="<%= product.imageName %>">

            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" autocomplete="off" value="<%= product.title %>">
            </div>
            <div class="card__image">
                <label for="imageUrl">Current Image</label>
                <br>
                <img src="/images/<%= product.imageName %>" alt="<%= product.title %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Upload New Image</label>
                <!-- <input type="text" name="imageUrl" id="imageUrl" value="<%= product.imageUrl %>"> -->
                <input type="file" name="file_upload" id="file_upload">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<%= product.price %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><%= product.description %></textarea>
            </div>

            <button class="btn" type="submit">Update Product</button>
        </form>
    </main>

    <%- include("../../include/end.ejs") %>